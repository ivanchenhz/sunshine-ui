{
  "name": "sunshine-ui",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "style": "dist/index.css",
  "repository": "https://github.com/ivanchenhz/sunshine-ui.git",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "postbuild": "npm run icons-sprite",
    "prepublishOnly": "npm run build",
    "playground": "rollup -c 'playground/rollup.config.js' -w",
    "prebuild:playground": "purgesvg --content playground/**/*.svelte src/**/*.svelte --svgs dist/heroicons.svg --out playground/public",
    "build:playground": "NODE_ENV=production rollup -c 'playground/rollup.config.js'",
    "start": "sirv playground/public --gzip",
    "icons-sprite": "svg-sprite --svg-namespace-classnames false --symbol --symbol-dest ./dist --symbol-sprite heroicons.svg node_modules/heroicons/./**/*.svg"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-url": "^6.0.0",
    "@twbs/svg-sprite": "^1.6.1",
    "autoprefixer": "^10.2.4",
    "heroicons": "^0.4.2",
    "postcss": "^8.2.5",
    "purgesvg": "^1.1.0",
    "rollup": "^2.0.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.0.0",
    "tailwindcss": "^2.0.3"
  },
  "keywords": [
    "svelte",
    "tailwindcss"
  ],
  "files": [
    "src",
    "dist"
  ],
  "version": "0.0.6",
  "description": "A component library, beautiful like sunshine...",
  "author": "Ivan Chen",
  "license": "MIT",
  "dependencies": {
    "sirv-cli": "^1.0.11"
  }
}
